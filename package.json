{
  "name": "@vcmap/measurement",
  "version": "4.0.0",
  "description": "VCM Measurement Plugin",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "prepublishOnly": "vcmplugin build",
    "build": "vcmplugin build",
    "bundle": "vcmplugin bundle",
    "start": "vcmplugin serve",
    "preview": "vcmplugin preview",
    "buildStagingApp": "vcmplugin buildStagingApp",
    "lint:js": "eslint . --ext .vue,.js,.cjs,.mjs,.ts,.cts,.mts",
    "lint:prettier": "prettier --check .",
    "lint": "npm run lint:js && npm run lint:prettier",
    "format": "prettier --write --list-different . && npm run lint:js -- --fix",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "type-check": "vue-tsc --noEmit",
    "ensure-types": "vcmplugin ensure-types"
  },
  "author": "Virtual City Systems",
  "license": "MIT",
  "keywords": [
    "vcmap",
    "plugin"
  ],
  "files": [
    "src/",
    "dist/",
    "plugin-assets/",
    "LICENSE.md",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": "./src/index.js",
    "./dist": "./dist/index.js"
  },
  "prettier": "@vcsuite/eslint-config/prettier.js",
  "peerDependencies": {
    "@vcmap-cesium/engine": "^11.0.3",
    "@vcmap/core": "^6.2.0-rc.2",
    "@vcmap/ui": "^6.2.0-rc.3",
    "ol": "^10.4.0",
    "vue": "~3.4.38",
    "vuetify": "~3.7.14"
  },
  "overrides": {
    "esbuild": "^0.25.0",
    "@vcmap/core": "^6.2.0-rc.2",
    "@vcmap/ui": "^6.2.0-rc.3"
  },
  "devDependencies": {
    "@vcmap/plugin-cli": "^4.1.2",
    "@vcsuite/eslint-config": "^4.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "jest-canvas-mock": "^2.5.2",
    "jsdom": "^24.1.1",
    "resize-observer-polyfill": "^1.5.1",
    "typescript": "^5.9.2",
    "vite-plugin-vuetify": "^2.0.3",
    "vitest": "^2.1.9",
    "vue-tsc": "^2.2.12"
  },
  "dependencies": {
    "@vcsuite/logger": "^1.0.1"
  },
  "mapVersion": "^6.2"
}
